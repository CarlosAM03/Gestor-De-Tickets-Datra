{
  "compilerOptions": {
    /* Base */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    /* React */
    "jsx": "react-jsx",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Build behavior */
    "isolatedModules": true,
    "noEmit": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Types */
    "types": ["vite/client"]
  },
  "include": ["src"]
}
